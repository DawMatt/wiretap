{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./build/dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./build","./layouts", "webpack.config.js"]
}