{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "types": ["vite/client", "node"],
    "experimentalDecorators": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
    ],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./build", "./shoelace"]
}